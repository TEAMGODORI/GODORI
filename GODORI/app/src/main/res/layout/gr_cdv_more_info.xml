<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gr_cdv_recruiting_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false"
    android:focusable="true"
    card_view:cardBackgroundColor="@color/transparent">

    <LinearLayout
        android:layout_marginBottom="42dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/gr_iv_more_title"
            android:layout_width="173dp"
            android:layout_height="173dp"
            card_view:riv_corner_radius="8dp"
            android:background="@drawable/gr_ly_iv_more_title"
            android:scaleType="centerCrop"
            android:src="@drawable/gr_img_info_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/gr_tv_more_groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/gr_iv_creation_title"
                android:includeFontPadding="false"
                android:textColor="#494949"
                android:textSize="18sp"
                android:text="고도리" />

            <TextView
                android:id="@+id/gr_tv_more_groupLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gr_tv_more_groupName"
                android:includeFontPadding="false"
                android:textColor="#797979"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="헬린이들 집합" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gr_tv_more_groupLine"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/gr_ly_tv_creation_title"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.02"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:textColor="#797979"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:text="주4회" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/gr_ly_tv_creation_title"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.02"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:textColor="#797979"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:text="중" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/gr_ly_tv_creation_title"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.02"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:textColor="#797979"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:text="13명" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>