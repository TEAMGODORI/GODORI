<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OnBoarding3Activity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/gr_btn_creation1_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/gr_btn_back_black" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="규칙적인 운동의 시작"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="#909090"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은 운동해야지"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/text1"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="#6f76de"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹원들과 함께\n매일 운동을 기록해보세요"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_below="@id/text1"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="294dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@+id/text3"
        android:src="@drawable/img_onboarding3"/>


    <Button
        android:id="@+id/gr_btn_creation_complete"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gr_ly_btn_next"
        android:enabled="true"
        android:fontFamily="@font/notosanskr_medium"
        android:gravity="center"
        android:text="시작하기"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</RelativeLayout>