<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CertifTabDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ct_btn_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="오늘의 운동 남기기"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eff0f0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="481dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/my_iv_profile"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/my_ly_iv_profile" />

                    <TextView
                        android:id="@+id/my_tv_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="72dp"
                        android:layout_marginTop="33dp"
                        android:text="호떡주세요"
                        android:includeFontPadding="false"
                        android:textColor="#161c49"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="368dp"
                        android:layout_height="368dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="86dp"
                        android:background="@drawable/certif" />

                    <!--                    <ImageView-->
                    <!--                        android:layout_width="368dp"-->
                    <!--                        android:layout_height="368dp"-->
                    <!--                        android:layout_marginTop="86dp"-->
                    <!--                        android:layout_marginLeft="22dp"-->
                    <!--                        android:background="@drawable/certif"/>-->
                </RelativeLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff0f0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="631dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="26dp"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/customMediumFontStyle"
                    android:text="얼마나 운동 했어요?"
                    android:textColor="#2c2c2d"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/time_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="69dp"
                    android:background="@drawable/ct_btn_detail_post"
                    android:textColor="#5c6cf3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_exercise"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="38dp"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/customMediumFontStyle"
                    android:text="어떤 운동 했어요?"
                    android:textColor="#2c2c2d"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="182dp"
                    android:background="@drawable/ct_btn_detail_post"
                    android:textColor="#5c6cf3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/exercise"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="38dp"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/customMediumFontStyle"
                    android:text="운동 강도는 어땠나요?"
                    android:textColor="#2c2c2d"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/intensity"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="294dp"
                    android:background="@drawable/ct_btn_detail_post"
                    android:textColor="#5c6cf3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/intensity"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="38dp"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/customMediumFontStyle"
                    android:text="오늘 운동은 말이죠"
                    android:textColor="#2c2c2d"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="406dp"
                    android:background="@drawable/ct_btn_detail_post"
                    android:textColor="#5c6cf3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reviews"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="38dp"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/customMediumFontStyle"
                    android:text="오늘 운동에 대한 코멘트는?"
                    android:textColor="#2c2c2d"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="348dp"
                    android:layout_height="82dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="518dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:gravity="top"
                    android:includeFontPadding="false"
                    android:padding="14dp"
                    android:textSize="16dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff0f0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp">

                <ImageView
                    android:id="@+id/img_heart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ct_btn_heart" />

                <TextView
                    android:id="@+id/text_heart_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="16dp"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textSize="16dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff0f0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>